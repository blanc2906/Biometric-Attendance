  Serial.print("Enrolling ID #"); Serial.println(id);

  uint8_t p = -1;
  while (p != FINGERPRINT_OK) {
    p = finger.getImage();
  }
  p = finger.fingerFastSearch();
  if (p == FINGERPRINT_OK) {
    Serial.print("Fingerprint already exists");
    return;
  }
  
  while (!getFingerprintEnroll());
}

